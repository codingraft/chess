{
    "version": 2,
    "builds": [
        {
            "src": "./app.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "./views/index.ejs"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}